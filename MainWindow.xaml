<Window x:Class="Tasker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasker"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content=""  Margin="0,10,145,0" Width="120" Height="26" HorizontalAlignment="Right" VerticalAlignment="Top" />

        <Button Content="Dugme" Click="Button_Click" x:Name="Button" RenderTransformOrigin="1.333,1.219" Margin="720,10,10,0" BorderBrush="{x:Null}" Background="#FF0F0707" Foreground="#FFF7F7F7" FontStyle="Italic" Padding="1,1,1,1" BorderThickness="0,0,0,0" Width="70" Height="28" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="goal" Margin="16,155,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top"  Height="24" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="124"/>
        <TextBox x:Name="deadline" Margin="16,207,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="124"/>
        <TextBox x:Name="name" Margin="16,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="124"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="16,76,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="26" Width="46"/>
        <Label Content="Goal:" HorizontalAlignment="Left" Margin="16,132,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="26" Width="40"/>
        <Label Content="DeadLine:" HorizontalAlignment="Left" Margin="16,184,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="26" Width="66"/>
        <Button Content="+" Click="Create_Project"  BorderBrush="Black" Background="#FF030202" Foreground="White" Margin="144,12,0,0" Padding="0,0,0,0" FontSize="22" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="32" FontFamily="Arial" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Projects" Margin="20,12,0,0" Width="116" Height="32" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Window>
